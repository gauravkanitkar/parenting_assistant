{
  "dependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "lucide-react": "^0.525.0",
    "openai": "^5.10.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10"
  },
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "backend/**/*.{ts,js}": [
      "cd backend && npm run lint:fix",
      "cd backend && npm run format",
      "cd backend && npm run type-check",
      "cd backend && npm test -- --passWithNoTests"
    ],
    "frontend/src/**/*.{ts,tsx,js,jsx}": [
      "cd frontend && npm run lint:fix",
      "cd frontend && npm run format",
      "cd frontend && npm test -- --passWithNoTests --watchAll=false"
    ]
  }
}
